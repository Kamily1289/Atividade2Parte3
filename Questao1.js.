const produtosJSON = `{
    "itens": [
        {
            "id": 1,
            "nome": "Notebook Gamer",
            "preco": 2999.99,
            "categoria": "eletronicos",
            "tags": ["tecnologia", "computacao", "gamer"]
        },
        {
            "id": 2, 
            "nome": "Mesa Escrit√≥rio",
            "preco": 450.50,
            "categoria": "moveis",
            "tags": ["escritorio", "madeira", "profissional"]
        }
    ]
}`;

function a(b) {

    // Converter string JSON em objeto
    b = JSON.parse(b);
    let listaFormatada = [];

    for (let item of b.itens) {
        
        let texto = `${item.nome} - ${item.preco} (CATEGORIA: ${item.categoria})`;

        listaFormatada.push(texto);
    }

    return listaFormatada;
}

a(produtosJSON);
